@model PersonalProfileUI.Models.AddProjectViewModel

@{
}

<h1 class="mt-3">Add Project</h1>
<form method="post" asp-action="Add">

	<div class="mt-3">
		<label class="form-label">Title</label>
		<input type="text" class="form-control" asp-for="Title"/>
	</div>

		<div class="mt-3">
		<label class="form-label">Aim</label>
		<input type="text" class="form-control" asp-for="Aim"/>
	</div>

	<div class="mt-3">
		<label class="form-label">Description</label>
		<input type="text" class="form-control" asp-for="Description"/>
	</div>

	<div class="mt-3">
		<label class="form-label">ImageUrl</label>
		<input type="text" class="form-control" asp-for="ImageUrl"/>
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>

</form>
