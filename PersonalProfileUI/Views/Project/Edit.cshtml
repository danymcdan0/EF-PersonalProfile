@model PersonalProfileUI.Models.DTOs.ProjectDTO

@{
}

<h1 class="mt-3">Edit Project</h1>

@if (Model is not null)
{
	<form method="post">

		<div class="mt-3">
			<label class="form-label">Title</label>
			<input type="text" class="form-control" asp-for="Title" />
		</div>

			<div class="mt-3">
			<label class="form-label">Aim</label>
			<input type="text" class="form-control" asp-for="Aim"/>
		</div>

		<div class="mt-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" asp-for="Description" />
		</div>

		<div class="mt-3">
			<label class="form-label">Image</label>
			<input type="text" class="form-control" asp-for="ImageUrl" />
		</div>

		<div class="mt-3 d-flex justify-content-between">
			<button type="submit" class="btn btn-primary" asp-controller="Project" asp-action="Edit" asp-route-id="@Model.Id">Save</button>
			<button type="submit" class="btn btn-danger" asp-controller="Project" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
		</div>

	</form>
}
