@model PersonalProfileUI.Models.DTOs.ExperienceDTO

@{
}

<h1 class="mt-3">Edit Experience</h1>

@if (Model is not null)
{
	<form method="post">

		<div class="mt-3">
			<label class="form-label">Company</label>
			<input type="text" class="form-control" asp-for="Company" />
		</div>

			<div class="mt-3">
			<label class="form-label">Role</label>
			<input type="text" class="form-control" asp-for="Role"/>
		</div>

		<div class="mt-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" asp-for="Description"/>
		</div>

		<div class="mt-3">
			<label class="form-label">Start Date</label>
			<input type="month" class="form-control" asp-for="StartDate" />
		</div>

		<div class="mt-3">
			<label class="form-label">End Date</label>
			<input type="month" class="form-control" asp-for="EndDate" />
		</div>

		<div class="mt-3 d-flex justify-content-between">
			<button type="submit" class="btn btn-primary">Save</button>
			<button type="submit" class="btn btn-danger" asp-controller="Experience" asp-action="Delete">Delete</button>
		</div>

	</form>
}
