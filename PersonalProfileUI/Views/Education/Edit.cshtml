@model PersonalProfileUI.Models.DTOs.EducationDTO

@{
}

<h1 class="mt-3">Edit Education</h1>

@if (Model is not null)
{
	<form method="post">

		<div class="mt-3">
			<label class="form-label">University</label>
			<input type="text" class="form-control" asp-for="University" />
		</div>

			<div class="mt-3">
			<label class="form-label">Course</label>
			<input type="text" class="form-control" asp-for="Course"/>
		</div>

		<div class="mt-3">
			<label class="form-label">Grade</label>
			<input type="text" class="form-control" asp-for="Grade"/>
		</div>

		<div class="mt-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" asp-for="Description" />
		</div>

		<div class="mt-3">
			<label class="form-label">Start Date</label>
			<input type="month" class="form-control" asp-for="StartDate" />
		</div>

		<div class="mt-3">
			<label class="form-label">End Date</label>
			<input type="month" class="form-control" asp-for="EndDate" />
		</div>

		<div class="mt-3 d-flex justify-content-between">
			<button type="submit" class="btn btn-primary" asp-controller="Education" asp-action="Edit" asp-route-id="@Model.Id">Save</button>
			<button type="submit" class="btn btn-danger" asp-controller="Education" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
		</div>

	</form>
}
