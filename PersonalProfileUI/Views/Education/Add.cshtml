@model PersonalProfileUI.Models.AddEducationViewModel

@{
}

<h1 class="mt-3">Add Region</h1>
<form method="post" asp-action="Add">

	<div class="mt-3">
		<label class="form-label">University</label>
		<input type="text" class="form-control" asp-for="University"/>
	</div>

		<div class="mt-3">
		<label class="form-label">Course</label>
		<input type="text" class="form-control" asp-for="Course"/>
	</div>

	<div class="mt-3">
		<label class="form-label">Grade</label>
		<input type="text" class="form-control" asp-for="Grade"/>
	</div>

	<div class="mt-3">
		<label class="form-label">Description</label>
		<input type="text" class="form-control" asp-for="Description"/>
	</div>

	<div class="mt-3">
		<label class="form-label">Start Date</label>
		<input type="month" class="form-control" asp-for="StartDate"/>
	</div>

	<div class="mt-3">
		<label class="form-label">End Date</label>
		<input type="month" class="form-control" asp-for="EndDate" />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>

</form>
